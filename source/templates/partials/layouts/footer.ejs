<footer class="footer" role="contentinfo" itemscope="itemscope" itemtype="http://schema.org/WPFooter">

  <div class="grid">

    <p>Copyright <span itemprop="copyrightYear">{CopyrightYears}</span> | <a href="{BlogURL}" title="{Title}">{Title}</a></p>

    {block:ifShowSocial}

      <ul class="social">

        {block:ifShowRSS}
        <li><a href="{RSS}">RSS</a></li>
        {/block:ifShowRSS}

        {block:ifEmail}
        <li><a href="mailto:{text:Email}" alt="{lang:Send email}">Email</a></li>
        {/block:ifEmail}

        {block:ifBehance}
        <li><a href="//behance.net/{text:Behance}" alt="Behance profile" target="_blank">Behance</a></li>
        {/block:ifBehance}

        {block:ifCodepen}
        <li><a href="//codepen.io/{text:Codepen}" alt="Codepen Profile" target="_blank">Codepen</a></li>
        {/block:ifCodepen}

        {block:ifDribbble}
        <li><a href="//dribbble.com/{text:Dribbble}" alt="dribbble Profile" target="_blank">dribbble</a></li>
        {/block:ifDribbble}

        {block:ifFacebook}
        <li><a href="//facebook.com/{text:Facebook}" alt="Facebook Profile" target="_blank">Facebook</a></li>
        {/block:ifFacebook}

        {block:ifFlickr}
        <li><a href="{text:Flickr}" alt="Flickr Profile" target="_blank">Flickr</a></li>
        {/block:ifFlickr}

        {block:ifGithub}
        <li><a href="//github.com/{text:Github}" alt="GitHub Profile" target="_blank">GitHub</a></li>
        {/block:ifGithub}

        {block:ifGooglePlus}
        <li><a href="//plus.google.com/u/0/{text:Google Plus}" alt="Google Plus Profile" target="_blank">Google+</a></li>
        {/block:ifGooglePlus}

        {block:ifInstagram}
